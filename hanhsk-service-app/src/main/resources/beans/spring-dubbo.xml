<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                            http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:provider timeout="8000" threads="500" threadpool="fixed" accepts="2000"/>

    <dubbo:consumer timeout="10000"/>

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.service.name}"/>

    <!-- 使用zookeeper注册中心暴露服务地址  即zookeeper的所在服务器ip地址和端口号 -->
    <dubbo:registry address="${dubbo.registry.address}"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.port}"/>

    <!--<dubbo:monitor protocol="registry"/>-->

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.ruibo.taogou.service.UserService" ref="userService"/>

    <!-- 具体的实现bean -->
    <bean id="userService" class="com.ruibo.taogou.service.service.impl.UserServiceImpl"/>

    <bean id="taogouServiceServiceHolder" class="com.ruibo.taogou.service.holder.TaogouServiceServiceHolder">
        <property name="userService" ref="userService"/>
    </bean>
</beans>